#!/usr/bin/python3
"""
    BaseGeometry Class
"""


class BaseGeometry():
    """
        empty class
    """

    def area(self):
        """
        Area
        """

        raise Exception("area() is not implemented")

    def integer_validator(self, name, value):
        """
        validates value
        """

        if not isinstance(value, int):
            raise TypeError("<name> must be an integer")
        if value <= 0:
            raise ValueError("<name> must be greater than 0")
